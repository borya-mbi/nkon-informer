# Telegram Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxYZ

# Centralized JSON configuration for all recipients
# Format: List of dictionaries with chat_id, type (full/changes), 
# thread_id (optional), and min_capacity_ah (optional override)
TELEGRAM_CONFIG_JSON='[{"chat_id":"-100123456789","type":"changes","thread_id":123456,"min_capacity_ah":280,"url":"https://t.me/example_channel","name":"Канал"}]'

# Thresholds
MIN_CAPACITY_AH=200
PRICE_ALERT_THRESHOLD=5
# Threshold for treating stock increase as restock vs return (default: 100)
RESTOCK_THRESHOLD=100
# Threshold to ignore notifications for small stock appearances/restocks (default: 16)
SMALL_RESTOCK_THRESHOLD=16

# Quiet Mode (Silent notifications during night)
# 0-23 hours format
QUIET_HOURS_START=21
QUIET_HOURS_END=8

# Monitor URL
NKON_URL=https://www.nkon.nl/ua/rechargeable/lifepo4/prismatisch.html

# Advanced settings
# Whether to fetch "Expected Delivery Date" by opening product pages (default: true)
FETCH_DELIVERY_DATES=true
# Minimum delay in seconds between fetching product detail pages
DETAIL_FETCH_DELAY=2

# Whether to probe real stock by simulating large order in cart (default: true)
FETCH_REAL_STOCK=true

# Smart Heartbeat - notification at scheduled times if no changes detected
# Comma-separated times in HH:MM format (default: 8:00)
HEARTBEAT_TIMES=8:00,12:00,16:00

# --- Visualization ---
FTP_HOST=
FTP_USER=
FTP_PASS=
FTP_DIR=/
VISUALIZATION_BASE_URL=
# Whether to generate and upload history graphs (default: true)
GENERATE_GRAPHS=true
